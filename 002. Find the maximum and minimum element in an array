//Find the maximum and minimum element in an array
#include <iostream>
using namespace std;
int main()
{
    int arr[]={43,65,35,22,98,54,67,23,45,78};
    int n=sizeof(arr)/sizeof(arr[0]);
    int minele=arr[0];
    int maxele=arr[0];
    for(int i=0;i<n;i++){
        if(arr[i]<minele){
            minele=arr[i];
        }
        else if(arr[i]>maxele){
            maxele=arr[i];
        }
    }
    cout<<"The minimum element = "<<minele;
    cout<<endl;
    cout<<"The maximum element = "<<maxele;
    return 0;
}
